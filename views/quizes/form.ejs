<div class="form-group">
	<label  class="control-label col-sm-2"  for="preg" class="rem">Pregunta:</label>
	 <div class="col-sm-10">
	<input type="text" id="preg" class="form-control" name="quiz[pregunta]" value="<% quiz.pregunta %>" /> 
	 </div>
</div> 
<div class="form-group" >
	<label  class="control-label col-sm-2" for="resp" class="rem">Respuesta:</label>
	 <div class="col-sm-10">
		<input class="form-control"  type="text" id="resp" name="quiz[respuesta]" value="<% quiz.respuesta %>" /> 
	</div>
</div>
<div class="form-group" style="margin-bottom:10px">
	<label class="control-label col-sm-2"  for="image" class="rem">Image:</label>
	 <div class="col-sm-10">
	<input type="file" accept="image/*" id="image" name="image"/>
	 </div>
 </div>
<div  style="margin-bottom:30px">
<button class="btn  btn-primary pull-right" type="submit" value="Enviar">Enviar</button>
<a href="/quizes" class="btn  btn-warning pull-right" style="margin-right:10px;"type="button">Cancelar</a>
</div>